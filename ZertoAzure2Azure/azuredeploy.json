{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
		"vmAdminUserName": {
        "type": "string",
        "minLength": 1,
        "metadata": {
            "description" : "Virtual Machine user name"
        }
      },
      "vmAdminPassword": {
        "type": "securestring",
        "metadata": {
            "description" : "Virtual Machine password"
        }
      }
	},
    "variables": {},
    "resources": [
	{
            "apiVersion": "2017-05-10",
            "name": "source",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/navalev/ARM_Templates/master/ZertoAzure2Azure/source.json",
                    "contentVersion": "1.0.0.0"
                }
            },			
			"parameters":{
				"vmAdminUserName":{"value": "[parameters('vmAdminUserName')]"},
				"vmAdminPassword":{"value": "[parameters('vmAdminPassword')]"}
			}
        },
        {
            "apiVersion": "2017-05-10",
            "name": "target",
            "type": "Microsoft.Resources/deployments",			
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/navalev/ARM_Templates/master/ZertoAzure2Azure/target.json",
                    "contentVersion": "1.0.0.0"
                }
            },
			"parameters":{
				"vmAdminUserName":{"value": "[parameters('vmAdminUserName')]"},
				"vmAdminPassword":{"value": "[parameters('vmAdminPassword')]"}
			}
        }
    ]
}